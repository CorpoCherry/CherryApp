@page
@model IndexModel
@{
    ViewData["Title"] = "Panel";
}
@section Styles {
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/pages/index.min.css" />
}
<div class="mdc-toolbar mdc-toolbar--fixed">
    <div class="mdc-toolbar__row">
        <section class="mdc-toolbar__section mdc-toolbar__section--align-start">
            <button class="material-icons mdc-toolbar__menu-icon menu">menu</button>
            <span class="mdc-toolbar__title catalog-title">Panel Główny</span>
        </section>
    </div>
</div>
<aside class="mdc-temporary-drawer">
    @Html.Partial("AdditionalViews/_Menu.cshtml", Model._MenuModel)
</aside>
<main class="main mdc-toolbar-fixed-adjust">
    <h1 class="mdc-typography--display1">Aktualna data: @DateTime.Now.ToLongDateString()</h1>
    <p class="mdc-typography--body1">Więcej opcji w menu na górze...</p>
</main>
@section Scripts{
<script>
    var drawerEl = document.querySelector('.mdc-temporary-drawer');
    var MDCTemporaryDrawer = mdc.drawer.MDCTemporaryDrawer;
    var drawer = new MDCTemporaryDrawer(drawerEl);
    document.querySelector('.menu').addEventListener('click', function () {
        drawer.open = true;
    });
    drawerEl.addEventListener('MDCTemporaryDrawer:open', function () {
        console.log('Received MDCTemporaryDrawer:open');
    });
    drawerEl.addEventListener('MDCTemporaryDrawer:close', function () {
        console.log('Received MDCTemporaryDrawer:close');
    });
</script>
}