@model Cherry.Web.Pages.AdditionalViews._MenuModel
@using Cherry.Web.Interfaces
@inject IUserProfileLoader UserServices
@{
    Model.CurrentUser = await UserServices.GetCurrentUser(User);
}
<aside class="mdc-drawer mdc-drawer--temporary">
    <nav class="mdc-drawer__drawer">
        <header class="mdc-drawer__header">
            <div class="mdc-drawer__header-content mdc-theme--on-primary mdc-theme--primary-bg">
                Witaj, @Model.CurrentUser.FirstName
            </div>
            <form asp-controller="Action" asp-action="LogOut" method="post">
                <input class="mdc-button mdc-theme--on-primary" id="logout" data-mdc-auto-init="MDCRipple" type="submit" value="Wyloguj" />
            </form>
        </header>
        <nav class="mdc-drawer__content mdc-list-group">
            <div class="mdc-list">
                <a class="mdc-list-item mdc-list-item--selected" href="@Url.Page("/Index")" data-mdc-auto-init="MDCRipple">
                    <i class="material-icons mdc-list-item__graphic" aria-hidden="true">home</i>Panel główny
                </a>
            </div>
            <hr class="mdc-list-divider">
            <div class="mdc-list slidemenu">
                <a class="mdc-list-item slidebutton" href="#" data-mdc-auto-init="MDCRipple">
                    <i class="material-icons mdc-list-item__graphic" aria-hidden="true">settings</i>Zarządzanie
                </a>
                <div class="slidearea">
                    <hr class="mdc-list-divider">
                    <a class="mdc-list-item" href="@Url.Page("/Manage/Schools")" data-mdc-auto-init="MDCRipple">
                        <i class="material-icons mdc-list-item__graphic" aria-hidden="true">school</i>Szkoły
                    </a>
                    <a class="mdc-list-item" href="@Url.Page("/Manage/Operators")" data-mdc-auto-init="MDCRipple">
                        <i class="material-icons mdc-list-item__graphic" aria-hidden="true">supervisor_account</i>Operatorzy
                    </a>
                </div>
            </div>
            <hr class="mdc-list-divider">
        </nav>
    </nav>
</aside>

<aside class="mdc-drawer mdc-drawer--temporary mdc-typography">
    <nav class="mdc-drawer__drawer">
        <header class="mdc-drawer__header">
            <div class="mdc-drawer__header-content">
                Header here
            </div>
        </header>
        <nav id="icon-with-text-demo" class="mdc-drawer__content mdc-list">
            <a class="mdc-list-item mdc-list-item--activated" href="#">
                <i class="material-icons mdc-list-item__graphic" aria-hidden="true">inbox</i>Inbox
            </a>
            <a class="mdc-list-item" href="#">
                <i class="material-icons mdc-list-item__graphic" aria-hidden="true">star</i>Star
            </a>
        </nav>
    </nav>
</aside>
